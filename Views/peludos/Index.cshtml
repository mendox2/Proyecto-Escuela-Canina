<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_pel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo_trato_pel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.raza_pel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tel_pap)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom_pel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_trato_pel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.raza_pel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel_pap)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.cod_pel }) |
                @Html.ActionLink("Details", "Details", new { id = item.cod_pel }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.cod_pel })
            </td>
        </tr>
    }

</table>
